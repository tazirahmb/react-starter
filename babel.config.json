{
  "env": {
    "development": {
      "presets": [
        "@babel/preset-env",
        "@babel/preset-react"
      ],
      "plugins": [
        [
          "module-resolver",
          {
            "root": [
              "."
            ],
            "extensions": [
              ".js",
              ".json"
            ],
            "alias": {
              "~": "./src"
            }
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "ie": 9
            },
            "forceAllTransforms": true
          }
        ],
        "@babel/preset-react"
      ],
      "plugins": [
        [
          "module-resolver",
          {
            "root": [
              "."
            ],
            "extensions": [
              ".js",
              ".json"
            ],
            "alias": {
              "~": "./src"
            }
          }
        ]
      ]
    },
    "test": {
      "presets": [
        "@babel/preset-env",
        "@babel/preset-react"
      ],
      "plugins": [
        [
          "module-resolver",
          {
            "root": [
              "."
            ],
            "extensions": [
              ".js",
              ".json"
            ],
            "alias": {
              "~": "./src"
            }
          }
        ]
      ]
    }
  }
}